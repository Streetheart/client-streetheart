<div class='container'>
  <div class='news'>
    <h2>News</h2>
    {{#each news in model}}
      <div class='col-md-4'>
        <h2>{{ news.title }}</h2>
        <p>{{news.body}}</p>
        {{#if news.body}}
          <p><a target="_blank" href="{{unbound news.link}}">{{news.linkText}}</a></p>
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>

{{outlet}}
